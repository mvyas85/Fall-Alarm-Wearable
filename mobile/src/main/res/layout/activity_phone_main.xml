<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PhoneMain">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".WearMain"
        tools:deviceIds="wear_square">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NPU Fall Alarm"
            android:id="@+id/Title"
            android:textSize="25dp"
            android:textAlignment="center" />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <TableRow>

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acceleration Values::"
                    android:textSize="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/val_x1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="X Coordinate: " />
                <TextView
                    android:id="@+id/x1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="X Value" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/val_y1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Y Coordinate: " />
                <TextView
                    android:id="@+id/y1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Y Value" />


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/val_z1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Z Coordinate: " />
                <TextView
                    android:id="@+id/z1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Z Value" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orientation Values::"
                    android:textSize="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/val_x2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="X2 Coordinate:" />
                <TextView
                    android:id="@+id/x2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="X2 Value" />

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/val_y2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Y2 Coordinate:" />
                <TextView
                    android:id="@+id/y2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Y2 Value" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/val_z2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="X2 Coordinate:" />
                <TextView
                    android:id="@+id/z2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Z2 Value" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location::"
                    android:textSize="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/loc_val_x"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Location X:" />
                <TextView
                    android:id="@+id/loc_x"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="X Loc Value" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/loc_val_y"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Location Y:" />
                <TextView
                    android:id="@+id/loc_y"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Y Loc Value" />

            </TableRow>
        </TableLayout>
    </LinearLayout>


</RelativeLayout>
